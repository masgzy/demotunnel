name: Build and Obfuscate edgetunnel

on:
  push:
    branches:
      - main
  schedule:
    # 每天凌晨1:00运行
    - cron: "0 1 * * *"

permissions:
  contents: write

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: 检出代码
        uses: actions/checkout@v4

      - name: 设置 Node.js 环境
        uses: actions/setup-node@v4
        with:
          node-version: "latest"

      - name: 安装依赖项
        run: |
          npm install -g javascript-obfuscator

      - name: 下载 edgetunnel worker.js
        run: |
          wget -O origin.js https://github.com/cmliu/edgetunnel/raw/main/_worker.js

      - name: 混淆 edgetunnel worker.js
        run: |
          javascript-obfuscator origin.js --output _worker.js \
            --compact true \
            --control-flow-flattening true \
            --control-flow-flattening-threshold 0.5 \  # 平衡安全性与性能
            --dead-code-injection false \             # 禁用以避免性能损耗
            --identifier-names-generator hexadecimal \
            --rename-globals true \
            --string-array true \
            --string-array-encoding rc4 \
            --string-array-indexes-type hexadecimal \
            --string-array-wrappers-count 1 \         # 单层包装平衡性能
            --transform-object-keys true \
            --unicode-escape-sequence true \
            --disable-console-output false \          # 保持console输出
            --debug-protection true \                 # 基础调试保护
            --debug-protection-interval false \       # 禁用以避免性能问题
            --self-defending true \
            --reserved-names '^_,require,exports' \
            --simplify true \                         # 优化代码结构
            --numbers-to-expressions true             # 数字混淆
        

      - name: 提交更改
        uses: stefanzweifel/git-auto-commit-action@v5
        with:
          branch: main
          commit_message: ':arrow_up: 更新最新的 edgetunnel'
          commit_author: 'github-actions[bot] <github-actions[bot]@users.noreply.github.com>'
          push_options: '--set-upstream'     